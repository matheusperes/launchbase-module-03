{% extends "layout.njk" %}

{% block head %}

<title>Portifolio - Matheus Peres</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

{% endblock %}

{% block content %}


    <div id="wrapper">
        <h1>Aulas</h1>
    </div> 
    
    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card_img-container {{ 'featured-wrapper' if item.featured }}">
                <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="imagem de {{item.tittle}}">    
            
            {% if item.featured %}
                <div class="featured">
                    feauterd
                </div>
            {% endif %}
            </div>
            <div class="card_content">
                <p>{{item.tittle}}</p>
            </div>

            <div class="card_info">
                <p>{{item.duration}}</p>
                <p class="card_price">{{item.price}}</p>
            </div>
        </div>
        {% endfor %}

    </section>

    <script src="/scripts.js"></script>

    {% endblock %}